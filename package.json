{
  "name": "brandon-pittman",
  "private": true,
  "description": "",
  "license": "",
  "main": ".",
  "sideEffects": false,
  "scripts": {
    "build": "rimraf public/build && npm run build:css && npm run build:remix",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "dev": "remix build && run-p dev:*",
    "dev:wrangler": "NODE_ENV=development wrangler pages dev ./public -b $(cat .env) ",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "remix watch",
    "generate:css": "npx tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css",
    "start": "remix-serve build",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.6",
    "@kyleshevlin/use-common": "^2.0.1",
    "@mdx-js/react": "^2.1.1",
    "@remix-run/cloudflare": "1.5.1",
    "@remix-run/cloudflare-pages": "1.5.1",
    "@remix-run/react": "^1.5.1",
    "@remix-run/server-runtime": "^1.5.1",
    "@upstash/redis": "^1.6.1",
    "fathom-client": "^3.4.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "remark-gfm": "^3.0.1",
    "remix": "^1.5.1",
    "remix-fathom": "^0.0.9",
    "remix-pages-context": "^0.1.13",
    "remix-seo": "^0.1.0",
    "remix-utils": "^3.2.0",
    "tiny-invariant": "^1.2.0",
    "wrangler": "^2.0.7"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@cloudflare/workers-types": "^3.11.0",
    "@remix-run/dev": "^1.5.1",
    "@remix-run/eslint-config": "^1.5.1",
    "@remix-run/serve": "^1.5.1",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/line-clamp": "^0.4.0",
    "@tailwindcss/typography": "^0.5.2",
    "@types/react": "^18.0.10",
    "@types/react-dom": "^18.0.5",
    "autoprefixer": "^10.4.7",
    "eslint": "^8.16.0",
    "miniflare": "^2.4.0",
    "nano-staged": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "reading-time": "^1.5.0",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.0",
    "tailwindcss": "^3.0.24",
    "tailwindcss-plugin-fancy": "^3.2.4",
    "typescript": "^4.7.2"
  },
  "nano-staged": {
    "*.{ts,tsx,md,mdx,css}": "prettier --write"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  }
}
