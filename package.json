{
  "name": "brandon-pittman",
  "private": true,
  "description": "",
  "license": "",
  "main": "build/index.js",
  "sideEffects": false,
  "scripts": {
    "build": "rimraf public/build && npm run build:css --scripts-prepend-node-path && npm run build:remix --scripts-prepend-node-path",
    "build:css": "npm run generate:css --scripts-prepend-node-path -- --minify",
    "build:remix": "remix build --scripts-prepend-node-path",
    "deploy": "npm run build && wrangler publish",
    "dev": "remix build && run-p dev:*",
    "dev:miniflare": "NODE_ENV=development miniflare ./build/index.js --watch",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "remix watch",
    "generate:css": "npx tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css",
    "start": "remix-serve build",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.6",
    "@kyleshevlin/use-common": "^2.0.0",
    "@mdx-js/react": "^2.1.1",
    "@remix-run/cloudflare": "1.3.5",
    "@remix-run/cloudflare-workers": "1.3.5",
    "@remix-run/react": "^1.3.5",
    "@upstash/redis": "^1.1.0",
    "fathom-client": "^3.4.1",
    "mdx-bundler": "^8.0.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "remark-gfm": "^3.0.1",
    "remix-fathom": "^0.0.9",
    "remix-seo": "^0.1.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.4.0",
    "@remix-run/dev": "^1.3.5",
    "@remix-run/eslint-config": "^1.3.5",
    "@remix-run/serve": "^1.3.5",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/line-clamp": "^0.3.1",
    "@tailwindcss/typography": "^0.5.2",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "autoprefixer": "^10.4.4",
    "eslint": "^8.12.0",
    "miniflare": "^2.1.0",
    "nano-staged": "^0.6.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "reading-time": "^1.5.0",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.7.0",
    "tailwindcss": "^3.0.23",
    "tailwindcss-plugin-fancy": "^3.2.1",
    "typescript": "^4.6.3"
  },
  "nano-staged": {
    "*.{ts,tsx,md,mdx,css}": "prettier --write"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  }
}
