{
  "name": "site",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s \"build:*\"",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "dev": "remix build && run-p dev:*",
    "dev:wrangler": "NODE_ENV=development wrangler pages dev ./public -b $(cat .env) -k KV --compatibility-date=2020-11-07",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "remix watch",
    "generate:css": "npx tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css",
    "start": "remix-serve build",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.6",
    "@kyleshevlin/use-common": "^2.0.1",
    "@mdx-js/react": "^2.1.2",
    "@remix-run/cloudflare": "1.7.5",
    "@remix-run/cloudflare-pages": "1.7.5",
    "@remix-run/react": "^1.7.5",
    "@remix-run/server-runtime": "^1.7.5",
    "@upstash/redis": "^1.6.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "remark-gfm": "^3.0.1",
    "remix": "^1.7.5",
    "remix-pages-context": "1.0.0-10",
    "remix-seo": "^0.1.0",
    "remix-utils": "^3.4.0",
    "tiny-invariant": "^1.3.1",
    "wrangler": "^2.1.15",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@cloudflare/workers-types": "^3.18.0",
    "@remix-run/dev": "^1.7.5",
    "@remix-run/eslint-config": "^1.7.5",
    "@remix-run/serve": "^1.7.5",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.7",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.27.0",
    "nano-staged": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.18",
    "reading-time": "^1.5.0",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.1",
    "tailwindcss": "^3.2.2",
    "tailwindcss-plugin-fancy": "^3.2.4",
    "typescript": "^4.8.4"
  },
  "nano-staged": {
    "*.{ts,tsx,md,mdx,css}": "prettier --write"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  },
  "engines": {
    "node": ">=16.13"
  }
}
