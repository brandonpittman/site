---
import { getCollection } from "astro:content";

import Layout from "@layouts/Layout.astro";

let books = await getCollection("books");

let isAbandoned = (b) => !!b.data.abandoned;

let abandoned = books.filter(isAbandoned);
//.sort((a, b) => (a.data.started < b.data.started ? -1 : 1));
---

<Layout title="Unfinished - Brandon Pittman">
  <main class="region wrapper prose flow">
    <h1>Abandoned</h1>
    <ul role="list" class="flow flow-m">
      {
        abandoned.map((book) => (
          <li class="flow-3xs">
            <a href={`/books/${book.slug}`}>{book.data.title}</a>
          </li>
        ))
      }
    </ul>
  </main>
</Layout>

<style>
  main {
    flex: 1 1 0%;
  }

  li > a {
    --gutter: var(--space-xs);
  }

